---
import { ThemeSwitch } from 'astro-color-scheme';
import { Icon } from 'astro-icon';
import NavLink from './NavLink.astro';
---

<NavLink
	as="label"
	class="relative h-[1.5em] w-[1.5em] cursor-pointer"
	for="darkmode"
>
	<ThemeSwitch
		defaultTheme="light"
		strategy="checkbox"
	>
		<input
			class="hidden"
			id="darkmode"
			type="checkbox"
		/>
		<Icon
			class="absolute h-full w-full transition-transform dark:scale-0"
			name="carbon:sun"
		/>
		<Icon
			class="absolute h-full w-full scale-0 transition-transform dark:scale-100"
			name="carbon:moon"
		/>
	</ThemeSwitch>
</NavLink>
