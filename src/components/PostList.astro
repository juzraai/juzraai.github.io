---
import { getCollection } from 'astro:content';
import type { Lang } from '../content/config';
import PostCard from './PostCard.astro';

type Props = {
	lang: Lang;
};
const { lang } = Astro.props;

const posts = await getCollection('blog');
const postsOfLang = posts.filter((p) => p.data.lang === lang);
postsOfLang.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const years = Array.from(new Set<number>(postsOfLang.map((p) => p.data.date.getFullYear())));
const postsOfYear = (y: number) => postsOfLang.filter((p) => p.data.date.getFullYear() === y);
---

{
	years.map((y) => (
		<section>
			<header>
				<h2>{y}</h2>
			</header>
			{postsOfYear(y).map((p) => (
				<PostCard post={p} />
			))}
		</section>
	))
}
