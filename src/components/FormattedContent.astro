---
import type { HTMLTag } from 'astro/types';

type Props = {
	as?: HTMLTag;
	class: string;
};
const Tag = Astro.props.as ?? 'div';
---

<Tag
	class:list={[
		'prose prose-custom mx-auto dark:prose-invert lg:prose-lg prose-a:text-sky-600 prose-a:underline-offset-2 dark:prose-a:text-sky-400 py-16',
		Astro.props.class,
	]}
>
	<slot />
</Tag>
