---
import type { HTMLTag } from 'astro/types';

type Props = {
	as?: HTMLTag;
	class: string;
};
const Tag = Astro.props.as ?? 'div';
---

<Tag
	class:list={[
		'prose prose-neutral mx-auto dark:prose-invert lg:prose-lg xl:prose-xl prose-a:text-sky-600 dark:prose-a:text-sky-500 py-16',
		Astro.props.class,
	]}
>
	<slot />
</Tag>
