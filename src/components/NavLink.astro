---
import type { Lang } from '../content/config';

type Props = {
	lang: Lang;
	path: 'blog' | 'portfolio';
};
const { lang, path } = Astro.props;

const labels: Record<typeof path, Record<Lang, string>> = {
	blog: { en: 'Notes', hu: 'Jegyzeteim' },
	portfolio: { en: 'Projects', hu: 'Munk√°im' },
};

const isActive = Astro.url.pathname.includes(path);
---

<a
	class:list={['hover:underline', isActive && 'underline']}
	href={`/${path}/${lang}/`}
	>{labels[path][lang]}</a
>
