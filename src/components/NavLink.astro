---
import type { HTMLTag } from 'astro/types';
import Icon from 'astro-icon';

type Props = {
	active?: boolean;
	as?: HTMLTag;
	class?: string;
	href?: string;
	icon?: string;
};
const { active, href, icon } = Astro.props;
const Tag = Astro.props.as ?? 'a';
---

<Tag
	class:list={[
		'hover:text-black dark:hover:text-white',
		active ? 'text-black font-semibold dark:text-white' : 'text-gray-600 dark:text-gray-300',
		Astro.props.class,
	]}
	href={href}
>
	<slot />
	{
		icon && (
			<Icon
				class="h-[1.5em] w-[1.5em]"
				name={icon}
			/>
		)
	}
</Tag>
