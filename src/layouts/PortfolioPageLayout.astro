---
import CenteredContainer from '../components/CenteredContainer.astro';
import FormattedContent from '../components/FormattedContent.astro';
import ProjectList from '../components/ProjectList.astro';
import { portfolioTitle, type Lang } from '../content/config';
import BaseLayout from './BaseLayout.astro';

type Props = {
	description: string;
	lang: Lang;
};
const { description, lang } = Astro.props;
---

<BaseLayout
	alt={{ en: '/projects/en/', hu: '/projects/hu/' }}
	description={description}
	lang={lang}
	title={portfolioTitle[lang]}
>
	<CenteredContainer as="main">
		<FormattedContent>
			<header>
				<h1>{portfolioTitle[lang]}</h1>
				<p class="lead">
					{description}
				</p>
			</header>
			<ProjectList lang={lang} />
		</FormattedContent>
	</CenteredContainer>
</BaseLayout>
