---
import Icon from 'astro-iconify';
import CenteredContainer from '../components/CenteredContainer.astro';
import { blogTitle, type Lang, portfolioTitle } from '../content/config';
import BaseLayout from './BaseLayout.astro';

type Props = {
	lang: Lang;
	greet: string;
	name: string;
	profession: string;
	intro: string;
	title: string;
};
const { greet, name, profession, intro, lang, title } = Astro.props;

// TODO add current stack
---

<BaseLayout
	alt={{ en: '/en/', hu: '/' }}
	lang={lang}
	title={title}
>
	<CenteredContainer class="flex grow">
		<div class="prose m-auto dark:prose-invert md:prose-lg lg:prose-xl">
			<p class="hidden md:block">{greet}</p>
			<h1 class="!mb-6 font-narrow">
				<span class="font-semibold">{name}</span>
				<br />
				<small class="font-normal">{profession}</small>
			</h1>
			<h2
				class="!mt-0 font-narrow font-normal text-gray-600 dark:text-gray-400"
				set:html={intro}
			/>
			<div class="flex gap-4">
				<h3 class="!mt-0"><a href={`/blog/${lang}`}>{blogTitle[lang]}</a></h3>
				<h3 class="!mt-0"><a href={`/projects/${lang}`}>{portfolioTitle[lang]}</a></h3>
			</div>
		</div>
	</CenteredContainer>
</BaseLayout>

