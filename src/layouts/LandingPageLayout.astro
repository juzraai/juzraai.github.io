---
import CenteredContainer from '../components/CenteredContainer.astro';
import { blogTitle, type Lang, portfolioTitle } from '../content/config';
import BaseLayout from './BaseLayout.astro';

type Props = {
	lang: Lang;
	greet: string;
	name: string;
	profession: string;
	intro: string;
	title: string;
};
const { greet, name, profession, intro, lang, title } = Astro.props;

// TODO add current stack
---

<BaseLayout
	alt={{ en: '/en/', hu: '/' }}
	lang={lang}
	title={title}
>
	<CenteredContainer class="font-narrow flex">
		<div class="flex flex-col gap-4 mx-auto w-[32rem] py-8">
			<p class="font-medium text-xl text-gray-500 dark:text-gray-400">{greet}</p>
			<div>
				<h1 class="mb-2 font-semibold text-4xl">{name}</h1>
				<h1 class="font-normal text-3xl">{profession}</h1>
			</div>
			<p
				class="text-2xl text-gray-700 dark:text-gray-300"
				set:html={intro}
			/>
		</div>
	</CenteredContainer>

	<hr />
	<nav>
		<a href={`/blog/${lang}`}>{blogTitle[lang]}</a>
		<a href={`/projects/${lang}`}>{portfolioTitle[lang]}</a>
	</nav>
</BaseLayout>
