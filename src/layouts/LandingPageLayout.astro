---
import Icon from 'astro-iconify';
import CenteredContainer from '../components/CenteredContainer.astro';
import { blogTitle, type Lang, portfolioTitle } from '../content/config';
import BaseLayout from './BaseLayout.astro';

type Props = {
	lang: Lang;
	greet: string;
	name: string;
	profession: string;
	intro: string;
	title: string;
};
const { greet, name, profession, intro, lang, title } = Astro.props;

// TODO add current stack
---

<BaseLayout
	alt={{ en: '/en/', hu: '/' }}
	lang={lang}
	title={title}
>
	<CenteredContainer class="font-narrow">
		<div class="prose prose-lg mx-auto dark:prose-invert lg:prose-xl">
			<p>{greet}</p>
			<h1 class="!mb-6">
				<span class="font-semibold">{name}</span>
				<br />
				<small class="font-normal">{profession}</small>
			</h1>
			<h2
				class="!mt-0 font-normal text-gray-600 dark:text-gray-400"
				set:html={intro}
			/>
			<div class="flex">
				<div class="grid grid-cols-4 gap-3 text-xl text-gray-600 dark:text-gray-400">
					{
						[
							'mysql',
							'tsnode',
							'trpc',
							'nuxtdotjs',
							'vuedotjs',
							'tailwindcss',
							'astro',
							'apachecordova',
						].map((n) => (
							<Icon
								class="h-[1.5em] w-[1.5em]"
								name={`simple-icons:${n}`}
							/>
						))
					}
				</div>
			</div>
		</div>
	</CenteredContainer>

	<nav class="pt-16">
		<a href={`/blog/${lang}`}>{blogTitle[lang]}</a>
		<a href={`/projects/${lang}`}>{portfolioTitle[lang]}</a>
	</nav>
</BaseLayout>
